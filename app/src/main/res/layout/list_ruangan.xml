<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#EFF5F5"
    android:padding="8dp">


    <ImageView
        android:id="@+id/icon_undip"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/logo_undip_universitas_diponegoro"
        android:layout_centerVertical="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#90A17D"
        android:id="@+id/btn_detail"
        android:text="Detail"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/icon_undip"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nama_ruangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingLeft="10dp"
            android:text="Ruangan Laboratorium"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/kode_ruangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:text="Kode Ruangan"
            android:textColor="@color/black"
            android:textSize="15sp" />


    </LinearLayout>




</RelativeLayout>